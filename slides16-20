KILLING THE TIME

#include<iostream>

using namespace std;

int main()
{

    char opt;
    int time, cash = 0;


    cout << "You are killing time in Dubai mall, waiting for you friend who is always late. \nYou recieve a text tellin you how he/she is going to be." << "\n";
    cout << "How long are they gonna be late for?: \n";
    cin >> time;


    if (time >= 15) {
        cout << "Do you have some cash in your wallet or pocket? \n";
        cin >> opt;

        if (tolower(opt) == 'y') {
            cout << "Do you have some cash in your wallet or pocket? \n";

            if (cash >= 5) {
                cout << "Go to starbucks, and buy a cup of coffee. \n";

            }

            else {
                cout << "Walk around the town then. \n";
            }

        }

        else if (tolower(opt) == 'n') {
            cout << "Walk around the town then.";
        }

        else {
            cout << "Go to starbucks, and buy a cup of coffee.";
        }

    }

         else {
             cout << "Find a seat and wait in the food zone.";
        }
    }

